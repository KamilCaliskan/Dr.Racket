;kimden kime agirlik
(define harita
  (list (list 1 2 1)
        (list 1 3 3)
        (list 2 3 2)
        (list 3 2 2)
        (list 2 4 2)
        (list 2 7 1)
        (list 3 5 3)
   )
)

;bir d端g端mden gidilebilecek alternatiflerin listesi
;d端g端m numaralari ve agirliklari ile doludur

(define (alt alist dugum) (if (empty? alist)
                              alist
                              (if (= dugum (first (first alist)))
                                  (cons (rest (first alist)) (alt (rest alist) dugum))
                                  (alt (rest alist) dugum)
                                  )
                              )
  )


(alt harita 2) 
